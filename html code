    <!-- Custom Tailwind Style for Skill Badges and JS Logic -->
    <script>
        // JavaScript for Tab Interactivity
        function showTab(tabId) {
            // Hide all contents and deactivate all buttons
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('border-[#38bdf8]', 'text-[#38bdf8]');
                button.classList.add('border-transparent', 'text-gray-400', 'hover:text-[#5eead4]');
            });

            // Show selected content and activate selected button
            const selectedContent = document.getElementById(`content-${tabId}`);
            if (selectedContent) {
                selectedContent.classList.remove('hidden');
            }

            const selectedButton = document.getElementById(`tab-${tabId}`);
            if (selectedButton) {
                selectedButton.classList.add('border-[#38bdf8]', 'text-[#38bdf8]');
                selectedButton.classList.remove('border-transparent', 'text-gray-400', 'hover:text-[#5eead4]');
            }
        }

        // Set the initial active tab on page load
        document.addEventListener('DOMContentLoaded', () => {
            showTab('current'); 
        });

        // Tailwind Config for colors
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-bg': '#161b22',
                        'accent-light': '#5eead4', /* Teal */
                        'accent-dark': '#38bdf8', /* Sky Blue */
                    },
                },
            },
        }
    </script>
